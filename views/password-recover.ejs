<%- include('partials/header') %>
<body class="auth-body">
  <main class="auth-layout">
    <section class="auth-card" aria-labelledby="recoverTitle">
      <div class="auth-logo">
        <img src="/assets/logo.png" alt="LATE">
      </div>

      <h1 id="recoverTitle" class="auth-title">Recuperar senha</h1>
      <p class="auth-subtitle">
        Informe o e-mail cadastrado para enviarmos um link de redefinição.
      </p>

      <div id="recoverAlert" class="alert d-none" role="alert"></div>

      <form id="passwordRecoverForm" class="auth-form" novalidate>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <label for="recoverEmail" class="auth-label">E-mail</label>
        <input
          type="email"
          class="auth-input"
          id="recoverEmail"
          name="email"
          required
          autocomplete="email"
        >

        <button type="submit" class="btn btn-primary auth-submit">Enviar instruções</button>
      </form>

      <div class="auth-help">
        <a href="/login">Voltar para o login</a>
      </div>
    </section>

    <section class="auth-hero" aria-hidden="true">
      <div class="auth-hero-content">
        <h2 class="auth-hero-title">Proteja sua conta</h2>
        <p class="auth-hero-text">
          Utilize senhas fortes e mantenha somente você com acesso ao painel.
        </p>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>
