<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>

  <main class="main" role="main">
    <div class="container">

      <!-- Cabeçalho -->
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:2rem;">
        <div>
          <h1 style="font-size:2rem;font-weight:700;margin-bottom:0.5rem;">Admin · Usuários</h1>
          <p style="color:var(--text-secondary);">Gerencie os operadores do sistema</p>
        </div>
        <a id="btnNewUser" href="/admin/users/new" class="btn btn-primary btn-lg">
          <span aria-hidden="true">➕</span> Novo usuário
        </a>
      </div>

      <!-- Pesquisa -->
      <section class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title mb-2">Pesquisar</h5>
          <p class="text-muted mb-3">Busque por nome ou e-mail</p>
          <div class="d-flex gap-2">
            <input id="searchInput" type="text" class="form-control" placeholder="Pesquisar por nome ou e-mail">
            <button id="searchBtn" class="btn btn-outline-secondary">Buscar</button>
          </div>
        </div>
      </section>

      <!-- Lista -->
      <section class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-2">Usuários</h5>
          <p class="text-muted mb-3">Lista de operadores cadastrados</p>

          <div class="table-responsive">
            <table id="usersTable" class="table align-middle">
              <thead>
                <tr>
                  <th style="width:80px;">ID</th>
                  <th>Nome</th>
                  <th>E-mail</th>
                  <th style="width:140px;">Perfil</th>
                  <th style="width:100px;">Ativo</th>
                  <th style="width:260px;">Ações</th>
                </tr>
              </thead>
              <tbody id="usersTbody">
                <tr><td colspan="6">Carregando...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

    </div>
  </main>

  <!-- Modal: Setores do usuário -->
  <div class="modal fade" id="userSectorsModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable">
      <form class="modal-content" id="userSectorsForm">
        <div class="modal-header">
          <h5 class="modal-title">Setores de <span id="userSectorsUserName"></span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <div id="userSectorsAlert" class="alert alert-danger d-none" role="alert"></div>
          <input type="hidden" id="userSectorsUserId">
          <div class="mb-2 text-muted">Selecione um ou mais setores. Pelo menos um é obrigatório.</div>
          <div id="userSectorsList" class="list-group">
            <!-- preenchido via JS -->
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </div>

  <%- include('partials/footer', { scripts: ['/js/admin-users.js'] }) %>

