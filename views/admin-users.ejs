<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>

  <main class="main" role="main">
    <div class="container">

      <!-- Cabeçalho -->
      <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:2rem;">
        <div>
          <h1 style="font-size:2rem;font-weight:700;margin-bottom:0.5rem;">Admin · Usuários</h1>
          <p style="color:var(--text-secondary);">Gerencie os operadores do sistema</p>
        </div>
        <a id="btnNewUser" href="/admin/users/new" class="btn btn-primary btn-lg">
          <span aria-hidden="true">➕</span> Novo usuário
        </a>
      </div>

      <!-- Pesquisa -->
      <section class="card shadow-sm mb-4">
        <div class="card-body">
          <h5 class="card-title mb-2">Pesquisar</h5>
          <p class="text-muted mb-3">Busque por nome ou e-mail e refine pelos filtros.</p>
          <form id="user-search-form" class="row g-2 align-items-end">
            <div class="col-sm-4">
              <label class="form-label" for="user-q">Buscar</label>
              <input id="user-q" type="text" class="form-control" placeholder="Nome ou e-mail">
            </div>
            <div class="col-sm-3">
              <label class="form-label" for="user-role">Perfil</label>
              <select id="user-role" class="form-select">
                <option value="">Todos</option>
                <option value="LEITOR">Leitor</option>
                <option value="OPERADOR">Operador</option>
                <option value="SUPERVISOR">Supervisão</option>
                <option value="ADMIN">Administrador</option>
              </select>
            </div>
            <div class="col-sm-3">
              <label class="form-label" for="user-status">Status</label>
              <select id="user-status" class="form-select">
                <option value="">Todos</option>
                <option value="active">Ativos</option>
                <option value="inactive">Inativos</option>
              </select>
            </div>
            <div class="col-sm-2">
              <button class="btn btn-primary w-100" type="submit">Pesquisar</button>
            </div>
          </form>
        </div>
      </section>

      <!-- Lista -->
      <section class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-2">Usuários</h5>
          <p class="text-muted mb-3">Lista de operadores cadastrados</p>

          <div class="table-responsive">
            <table id="usersTable" class="table align-middle">
              <thead>
                <tr>
                  <th style="width:80px;">ID</th>
                  <th>Nome</th>
                  <th>E-mail</th>
                  <th style="width:140px;">Perfil</th>
                  <th style="width:160px;">Escopo</th>
                  <th style="width:100px;">Status</th>
                  <th style="width:320px;">Ações</th>
                </tr>
              </thead>
              <tbody id="usersTbody">
                <tr><td colspan="7">Carregando...</td></tr>
              </tbody>
            </table>
          </div>
        </div>
      </section>

    </div>
  </main>

  <!-- Modal: Setores do usuário -->
  <div class="modal fade" id="userSectorsModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable">
      <form class="modal-content" id="userSectorsForm">
        <div class="modal-header">
          <h5 class="modal-title">Setores de <span id="userSectorsUserName"></span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <div id="userSectorsAlert" class="alert alert-danger d-none" role="alert"></div>
          <input type="hidden" id="userSectorsUserId">
          <div class="mb-2 text-muted">Selecione um ou mais setores. Pelo menos um é obrigatório.</div>
          <div id="userSectorsList" class="list-group">
            <!-- preenchido via JS -->
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary" type="submit">Salvar</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal: Redefinir senha -->
  <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
      <form class="modal-content" id="resetPasswordForm">
        <div class="modal-header">
          <h5 class="modal-title">Redefinir senha de <span id="resetPasswordUserName"></span></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <div id="resetPasswordAlert" class="alert alert-danger d-none" role="alert"></div>
          <input type="hidden" id="resetPasswordUserId">
          <div class="mb-3">
            <label for="resetPassword" class="form-label">Nova senha</label>
            <input type="password" class="form-control" id="resetPassword" minlength="8" required>
            <div class="form-text">Mínimo de 8 caracteres, incluindo letras e números.</div>
          </div>
          <div class="mb-3">
            <label for="resetPasswordConfirm" class="form-label">Confirmar nova senha</label>
            <input type="password" class="form-control" id="resetPasswordConfirm" minlength="8" required>
          </div>
        </div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">Cancelar</button>
          <button class="btn btn-primary" type="submit">Redefinir senha</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Modal: Remover usuário -->
  <div class="modal fade" id="removeUserModal" tabindex="-1" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Remover usuário</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <p>Tem certeza de que deseja remover o usuário <strong id="removeUserName"></strong>?</p>
          <div id="removeUserAlert" class="alert alert-danger d-none" role="alert"></div>
          <input type="hidden" id="removeUserId">
          <p class="text-muted small mb-0">Essa ação não pode ser desfeita.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <button type="button" class="btn btn-error" id="removeUserConfirmBtn">Remover usuário</button>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer', { scripts: ['/js/admin-users.js'] }) %>
