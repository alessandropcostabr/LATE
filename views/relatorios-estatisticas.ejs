<%- include('partials/header') %>
<body>
  <%- include('partials/navbar') %>

  <main class="main" role="main">
    <div class="container">
      <h1>Relatórios · Estatísticas</h1>

      <div class="card" style="margin-bottom:1.5rem;">
        <div class="card-header">
          <h2 class="card-title">Estatísticas Gerais</h2>
        </div>
        <div class="card-body">
          <ul>
            <li>Total de Registros: <strong id="relTotal">-</strong></li>
            <li>Pendentes: <strong id="relPendente">-</strong></li>
            <li>Em Andamento: <strong id="relAndamento">-</strong></li>
            <li>Resolvidos: <strong id="relResolvido">-</strong></li>
          </ul>
        </div>
      </div>

      <div class="card" style="margin-bottom:1.5rem;">
        <div class="card-header">
          <h2 class="card-title">Registros por Destinatário</h2>
        </div>
        <div class="card-body">
          <canvas id="graficoPorDestinatario" aria-label="Gráfico de registros por destinatário"></canvas>
        </div>
      </div>

      <div class="card" style="margin-bottom:1.5rem;">
        <div class="card-header">
          <h2 class="card-title">Registros por Status</h2>
        </div>
        <div class="card-body">
          <canvas id="graficoPorStatus" aria-label="Gráfico de registros por status"></canvas>
        </div>
      </div>

      <div class="card" style="margin-bottom:1.5rem;">
        <div class="card-header">
          <h2 class="card-title">Registros por Mês</h2>
        </div>
        <div class="card-body">
          <canvas id="graficoPorMes" aria-label="Gráfico de registros por mês"></canvas>
        </div>
      </div>

    </div>
  </main>

  <%- include('partials/footer', { scripts: ['/js/relatorios.js'] }) %>
</body>
</html>
