# .env.dev.example — exemplo para DESENVOLVIMENTO
# Comentários em pt-BR; chaves em inglês. Não versione segredos reais.

# =========================
# App
# =========================
NODE_ENV=development
HOST=0.0.0.0
PORT=3001
TRUST_PROXY=0
SESSION_SECRET=SUBSTITUA_POR_UM_SEGREDO_FORTE_DEV

# =========================
# Banco de Dados (PostgreSQL)
# =========================
DB_DRIVER=pg
PGHOST=127.0.0.1
PGPORT=5432
PGUSER=late_dev_app
PGPASSWORD=SUBSTITUA
PGDATABASE=late_dev
PG_SSL=0
PGSSLMODE=disable

# =========================
# CORS
# =========================
# Para front local (:3000) e API local (:3001)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# =========================
# Outros
# =========================
APP_BASE_URL=http://127.0.0.1:3001/
AUTH_TEST_MODE=0
DISABLE_CSRF_LOGIN=0
